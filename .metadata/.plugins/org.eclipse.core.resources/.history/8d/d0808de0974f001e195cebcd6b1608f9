package com.msb.lrg.ds.tree;

import com.msb.lrg.ds.Node;
import com.msb.lrg.ds.Utility;

public class BiTreeLowCommAnces {

	public static void main(String[] args) {
		Node root =  BiTreeLowCommAnces.createTree();
		Utility.printBinaryTree(root);
		int d1 = 30;
		int d2 = 80;
        System.out.println("O/P : " + (BiTreeLowCommAnces.getLCA(root, d1, d2)).data);
	}
	
	public static Node getLCA(Node root, int d1, int d2) {
		
		if(root == null)
			return null;
		
		System.out.println("%4s", root.data);
		
		if((root.data == d1) || (root.data == d2))
			return root;

		if(search(root.left, d1) && search(root.left, d2))
			getLCA(root.left, d1, d2);
		
		if(search(root.right, d1) && search(root.right, d2))
			getLCA(root.right, d1, d2);

		return root;
	}
	
	public static boolean search(Node root, int d) {

		if(root == null)
			return false;
		
		return (root.data == d) || search(root.left, d) || search(root.right, d);
	}

	public static Node createTree() {
		Node root = new Node(10);
		Node temp = null;
		
		temp = new Node(50);
		root.left = temp;
		temp = new Node(60);
		root.right = temp;

		temp = new Node(70);
		root.left.left = temp;
		temp = new Node(20);
		root.left.right = temp;

		temp = new Node(40);
		root.left.left.left = temp;
		temp = new Node(90);
		root.left.right.left = temp;
		temp = new Node(80);
		root.left.right.right = temp;

		temp = new Node(30);
		root.left.right.left.left = temp;

		return root;
	}
}
