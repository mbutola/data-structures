package com.msb.lrg.ds.dp;

public class MtxMultDP {

	public static void main(String[] args) {
		int[] matrixes = new int[] {2,1,3,4};
		System.out.println("O/P : " + MtxMultDP.multiplications(matrixes, matrixes.length));
	}

	public static int multiplications(int[] mat, int n) {
		
//		if(i+1==j)
//			return 0;
//		
//		int res = Integer.MAX_VALUE;
//		
//		for (int k = i+1; k < j; k++) {
//			res = Math.min(res, multiplications(mat, i, k)
//									+ multiplications(mat, k, j)
//									+ mat[i]*mat[k]*mat[j]);
//		}
//		
//		return res;
		
		int[][] dp = new int[n][n];
		
		for (int i = 0; i < n; i++) {
			for (int j = 0; j < n; j++) {
				dp[i][j] = -1;
			}
		}
		
		for (int i = 0; i < n-1; i++) {
			dp[i][i+1] = 0;
		}
		
		for (int i = 0; i < n; i++) {
			for (int j = i+2; j < n; j++) {
				dp[i][j] = Integer.MAX_VALUE;
				for (int k = i+1; k < j; k++) {
					dp[i][j] = Math.min(dp[i][j], 
										dp[i][k]
											+ dp[k][j]
											+ mat[i]*mat[k]*mat[j]);
				}
			}
		}
		
		Utility.printDp(Utility.getList(n), Utility.getList(n), dp);
		return dp[0][n-1];
		
	}
}
