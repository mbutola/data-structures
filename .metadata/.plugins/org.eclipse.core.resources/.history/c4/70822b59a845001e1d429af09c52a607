package com.msb.lrg.ds.dp;

public class AllocPageRecursive {

	public static void main(String[] args) {
		int[] pages = new int[] {10,5,30,1,2,5,10,10};
		int k = 3;
		System.out.println("O/P : " + AllocPageRecursive.allocPage(pages, pages.length, k));
	}

	public static int allocPage(int[] pages, int n, int s) {
		
		if(s==1)
			return sumPages(pages, 0, n-1);
		
		if(n == 1)
			return pages[0];
		
		int res = Integer.MAX_VALUE;
		
		for (int i = 1; i < n; i++) {
			res = Math.min(res, Math.max(allocPage(pages, i, s-1),
											sumPages(pages, i, n-1)));
		}
		
		return res;
	}
	
	public static int sumPages(int[] pages, int s, int f) {
		int sum = 0;
		for (int i = 0; i <=f ; i++) {
			sum+=pages[i];
		}
		return sum;
	}

}
