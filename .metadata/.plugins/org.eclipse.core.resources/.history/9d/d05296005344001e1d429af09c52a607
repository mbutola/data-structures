package com.msb.lrg.ds.dp;

public class EggDropDp {

	public static void main(String[] args) {
		int floors = 5;
		int eggs = 3;
		System.out.println("O/P : " + EggDropDp.breakFloor(floors, eggs));
	}
	
	public static int breakFloor(int f, int e) {
		
		int[][] dp = new int[f+1][e+1];
		
		for (int i = 1; i <=e; i++) {
			dp[0][i] = 0;
			dp[1][i] = 1;
		}

		for (int i = 1; i <=f; i++) {
			dp[1][i] = i;
		}
		
		if(e == 1)
			return f;
		
		if(f == 1 || f == 0)
			return f;
		
		int res;
		int min = Integer.MAX_VALUE;
		for (int i = 1; i <= f; i++) {
			res = Math.max(breakFloor(i-1, e-1), 
					breakFloor(f-i, e));
			min = Math.min(min, res);
		}
		
		return min+1;
	}
}
