package com.msb.lrg.ds.dp;

public class EggDropRecursive {

	public static void main(String[] args) {
		int floors = 10;
		int eggs = 2;
		System.out.println("O/P : " + EggDropRecursive.breakFloor(floors, eggs));
	}
	
	public static int breakFloor(int floors, int e) {
		
		if(e == 0 || floors == 0)
			return 0;
		
		return  1 + Math.max(breakFloor(floors-1, e-1), 
							breakFloor(floors-1, e));
		
	}

}
