package com.msb.lrg.ds.dp;

public class EggDropRecursive {

	public static void main(String[] args) {
		int floors = 10;
		int eggs = 2;
		System.out.println("O/P : " + EggDropRecursive.breakFloor(floors, 10, eggs));
	}
	
	public static int breakFloor(int floors,  int f, int e) {
		
		if(e == 0 || f == 0 || f > floors)
			return 0;
		
		return  1 + Math.max(breakFloor(floors, f-1, e-1), 
							breakFloor(floors, floors-f, e));
		
	}

}
