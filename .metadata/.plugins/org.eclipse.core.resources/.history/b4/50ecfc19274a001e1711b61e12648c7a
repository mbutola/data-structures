package com.msb.lrg.ds.tree;

public class TreeTraversal {

	public static void main(String[] args) {

		TreeTraversal.printTree(null);
	}

	
	public static void printTree(int[] tree) {
		System.out.printf("%3s", 0);

		System.out.println("\n");

		int[] data = new int[2];
		for (int i = 0; i < data.length; i++) {
			data[i] = i+1;
		}
		int k = 0;
		for (int i = 0; i < Math.pow(2, 1); i++) {
			System.out.printf("%18s", data[k++]);
			System.out.printf("%26s", "");
		}
		
		System.out.println("\n");

		data = new int[4];
		for (int i = 0; i < data.length; i++) {
			data[i] = i+3;
		}
		k = 0;
		for (int i = 0; i < Math.pow(2, 2); i++) {
			System.out.printf("%10s", data[k++]);
			System.out.printf("%10s", "");
		}
		
		System.out.println("\n");

		data = new int[8];
		for (int i = 0; i < data.length; i++) {
			data[i] = i+7;
		}
		k = 0;
		for (int i = 0; i < Math.pow(2, 3); i++) {
			System.out.printf("%6s", data[k++]);
			System.out.printf("%4s", "");
		}
		
		System.out.println("\n");
		
		data = new int[16];
		for (int i = 0; i < data.length; i++) {
			data[i] = i+15;
		}
		k = 0;
		for (int i = 0; i < Math.pow(2, 4); i++) {
			System.out.printf("%4s", data[k++]);
			if(i%2!=0)
				System.out.printf("%2s", "");
		}
	}
	
}

